
---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout pageTitle="Contact">
  <section class="section">
    <div class="container grid md:grid-cols-2 gap-10">
      <div>
        <h1 class="text-3xl md:text-4xl font-extrabold">Schedule Service</h1>
        <p class="mt-4 text-gray-700">Use this form to request service. Submissions go to your Cloudflare Pages dashboard via <strong>Pages Forms</strong>.</p>
        <form method="POST" data-cf="true" class="mt-6 space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input class="card" type="text" name="name" placeholder="Your name" required />
            <input class="card" type="email" name="email" placeholder="Your email" required />
          </div>
          <input class="card w-full" type="tel" name="phone" placeholder="Phone" />
          <input class="card w-full" type="text" name="subject" placeholder="Service needed" required />
          <textarea class="card w-full" name="message" placeholder="Describe your issue" rows="6" required></textarea>
          <button class="btn btn-primary" type="submit">Send</button>
        </form>
      </div>
      <div class="card">
        <h2 class="font-bold text-xl">Contact</h2>
        <p class="mt-2 text-gray-700">
          Tel: <a href="tel:+13045901434" class="underline">304-590-1434</a><br/>
          Email: <a class="underline" href="mailto:legionserviceswv@gmail.com">legionserviceswv@gmail.com</a><br/>
          Service Area: between Charleston and Huntington, WV
        </p>
        <div class="h-40 bg-gray-200 rounded-xl mt-4"></div>
        <p class="text-xs text-gray-500 mt-2">Add a service-area map or badges here.</p>
      </div>
    </div>
  </section>
</BaseLayout>
